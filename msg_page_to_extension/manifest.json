{
	"manifest_version": 2,
	"name": "MSG: page to extension",
	"version": "1.0",
	"description": "Sending message from page to extension",

	"content_scripts": [
	    {
	      "matches": [
	      	// "http://*.google.com/*",
	      	// "https://*.google.com/*",
	      	// "http://*.amazon.com/*"
	      	"https://*/*",
	      	"http://*/*"
	      ],
	      "js": ["js/main.js", "js/jquery-1.11.0.min.js"]
	    }
	  ],

	"browser_action": {
		"default_icon": "img/icon.png",
		"default_popup": "popup.html"
  	}

}